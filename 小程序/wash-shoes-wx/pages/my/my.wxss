.avatar {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    overflow: hidden;
    margin-bottom: 10px;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
}

.avatar open-data {
    width: 100%;
    height: 100%;
}

.nickName {
    font-size: 20px;
    font-weight: bold;
}
