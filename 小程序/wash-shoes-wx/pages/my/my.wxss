    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-top: 20px;
    /* border: 1rpx solid; */
    height: 400rpx;
    background: url(https://th.bing.com/th/id/OIG.QpWz3tS1FsUzMQHiyH5s?pid=ImgGn);
